<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_sale_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@tools:sample/date/hhmm" />

        <TextView
            android:id="@+id/text_sale_by"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/text_invoice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Serials"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="RtlSymmetry"
            tools:text="Partial" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_sale_customer_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Dismas Asiimwe(0772123456)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/colorControlHighlight"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="2dp"
                android:text="Sale"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_invocie_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="14sp"
                tools:text="1,000,000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_repair_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/colorControlHighlight"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="8dp"
                android:text="Paid"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_invoice_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="4dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="14sp"
                tools:text="1,000,000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_invoice_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/colorControlHighlight"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="2dp"
                android:text="Bal"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_invoice_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="4dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="14sp"
                tools:text="1,000,000" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        android:visibility="gone" />
</LinearLayout>